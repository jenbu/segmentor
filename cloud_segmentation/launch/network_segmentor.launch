        <param name="sd_camerainfo"         value="/jetson4/sd/camera_info" />
        <param name="output_topic_cloud"    value="/jetson4/segmented_cloud" />
    </node>

    <node pkg="darknet_ros" type="darknet_ros" name="darknet_ros" output="screen" launch-prefix="$(arg launch_prefix)" machine="jetson5">
        <param name="weights_path"          value="$(arg yolo_weights_path)" />
        <param name="config_path"           value="$(arg yolo_config_path)" />
